---
import Profile from '@asset/Profile.png';
import Section from '@layouts/Section.astro';
import { Image } from 'astro:assets';
import Contact from './Contact.astro';
---

<Section link="home">
    <div class="relative w-full h-fit mt-28 sm:mt-20 flex flex-col items-center gap-8 lg:gap-12 2xl:gap-16">
        <Image
            src={Profile}
            alt="404"
            width={512}
            height={512}
            loading="eager"
            class="object-cover w-64 h-64 md:w-72 md:h-72 xl:w-80 xl:h-80 2xl:w-96 2xl:h-96 rounded-full shadow-lg dark:border dark:border-gray-800 dark:!border-opacity-30"
        />

        <h1 class="font-bold text-5xl 2xl:text-6xl text-center">
            Hi! I'm <span class="text-transparent bg-clip-text bg-gradient-to-r from-violet-400 to-rose-400"
                >Carles Rojas</span
            >
        </h1>

        <p class="text-lg md:text-2xl text-center lg:max-w-[65%] text-balance opacity-70">
            Full stack Software Engineer & Designer from Barcelona with +5 years of experience
        </p>

        <Contact />
    </div>
</Section>
