import Icon from 'astro-icon';
---

<a
    class="fixed cursor-pointer z-40 top-3 left-3 sm:top-6 sm:left-6 p-4 w-fit h-14 rounded-full flex items-center justify-center gap-2 outline-none focus:scale-110 hover:scale-110 active:scale-105 transition-all border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950 !bg-opacity-75 backdrop-blur-md shadow-sm"
    href="javascript:window.history.back();"
    aria-label="Back"
>
    <Icon class="w-6 h-6" name="ri:arrow-left-line" />
    <span class="pointer-events-none">Back</span>
</a>
