---
import type { LinkId } from '@data/links';

interface Props {
    link?: LinkId;
    title?: string;
    smallGap?: boolean;
    mobileFullWidth?: boolean;
}

const { title, link, smallGap, mobileFullWidth } = Astro.props;
---

<section
    class={`relative flex flex-col w-10/12 max-w-7xl m-auto items-center gap-12 ${smallGap ? 'py-10' : 'py-20'} ${
        mobileFullWidth ? 'only-touch:w-full' : ''
    } scroll-mt-28 sm:scroll-mt-12`}
    id={link}
>
    {title && <h2 class="font-medium text-2xl sm:text-3xl">{title}</h2>}
    <slot />
</section>
